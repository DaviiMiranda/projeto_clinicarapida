{
  "info": {
    "name": "Clínica Rápida API - JWT Auth",
    "description": "Coleção de exemplos para testar autenticação JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@clinica.com\",\n  \"password\": \"admin123\",\n  \"name\": \"Administrador\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Medico",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"medico@clinica.com\",\n  \"password\": \"medico123\",\n  \"name\": \"Dr. João Silva\",\n  \"role\": \"MEDICO\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Paciente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"paciente@test.com\",\n  \"password\": \"paciente123\",\n  \"name\": \"Maria Santos\",\n  \"role\": \"PACIENTE\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Salvar token automaticamente",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('jwt_token', response.access_token);",
                  "    console.log('Token salvo:', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"medico@clinica.com\",\n  \"password\": \"medico123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/auth/profile",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
